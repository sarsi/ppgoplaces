<?xml version="1.0" encoding="UTF-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" > <!-- #ff6600 #ffcc99 -->
	        <shape android:shape="rectangle">
						<gradient
							android:startColor="#99ff66"
							android:endColor="#009900"
							android:type="linear"
							android:angle="270" />
			            <stroke
			                android:width="2sp"
			                android:color="#3399ff" />
			            <corners
			                android:radius="5dp" />			
			</shape>        
    </item>
    
    <item android:state_focused="true" > <!-- #ff6600 #ffcc99, , was state_focused -->
	        <shape android:shape="rectangle">
						<gradient
							android:startColor="#ff6600"
							android:endColor="#ffcc99"
							android:type="linear"
							android:angle="270" />
			            <stroke
			                android:width="2sp"
			                android:color="#99ccff" />
			            <corners
			                android:radius="5dp" />			
			</shape>        
    </item>
    
    <item>    
		<shape android:shape="rectangle">
					<gradient
						android:startColor="#99ccff"
						android:endColor="#006699"
						android:type="linear"
						android:angle="270" />
		            <stroke
		                android:width="2sp"
		                android:color="#ccffff" />
		            <corners
		                android:radius="5dp" />
		</shape>
	</item>
</selector>	
    